<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.colections.ColectionsFragment">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.28"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.614">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="30dp"
            android:layout_height="70dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="16dp"
            android:background="#fff"
            android:src="@drawable/back_img_project"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="8dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/titulo_coleccion"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="75dp"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:text="Colección con un nombre largo"
        android:textColor="#000"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/autor_coleccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/titulo_coleccion"
        android:layout_marginTop="7dp"
        android:orientation="horizontal"
        android:layout_marginStart="14dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="Autor:"
            android:textColor="#000"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="Juan Camilo Hernández"
            android:textColor="#000"
            android:textSize="24sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tipo_coleccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/autor_coleccion"
        android:layout_marginTop="7dp"
        android:orientation="horizontal"
        android:layout_marginStart="14dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="Tipo:"
            android:textColor="#000"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="Cocina"
            android:textColor="#000"
            android:textSize="24sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/anti_coleccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tipo_coleccion"
        android:layout_marginTop="7dp"
        android:orientation="horizontal"
        android:layout_marginStart="14dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="Antiguedad:"
            android:textColor="#000"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="3 años"
            android:textColor="#000"
            android:textSize="24sp"/>
    </LinearLayout>

    <Button
        android:id="@+id/create_alarm_button"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="32dp"
        android:background="#2738CC"
        android:fontFamily="@font/montserrat_bold"
        android:text="Crear Alarma"
        app:cornerRadius="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/anti_coleccion"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="8dp"
        android:paddingRight="20dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@+id/create_alarm_button"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:id="@+id/alarm_container_1"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/alarm1"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:paddingBottom="20dp"
                app:layout_constraintTop_toTopOf="@+id/alarm_container_1"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/artist_name"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:text="Descanso entre series"
                    android:fontFamily="@font/montserrat"
                    android:textSize="20sp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/album_recordLabel"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_light"
                    android:textSize="20sp"
                    android:text="Tipo: Ejercicio"
                    android:textColor="@color/black" />
            </LinearLayout>



            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/material_switch"
                android:layout_width="67dp"
                android:layout_height="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:scaleX="1.5"
                android:scaleY="1.25" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/alarm_container_2"
            app:layout_constraintTop_toBottomOf="@+id/alarm_container_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/alarm2"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:paddingBottom="20dp"
                app:layout_constraintTop_toTopOf="@+id/alarm_container_2"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/artist_name2"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:text="Descanso entre series"
                    android:fontFamily="@font/montserrat"
                    android:textSize="20sp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/album_recordLabel2"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_light"
                    android:textSize="20sp"
                    android:text="Tipo: Ejercicio"
                    android:textColor="@color/black" />
            </LinearLayout>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/material_switch2"
                android:layout_width="67dp"
                android:layout_height="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:scaleX="1.5"
                android:scaleY="1.25" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/alarm_container_3"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/alarm3"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:paddingBottom="20dp"
                app:layout_constraintTop_toTopOf="@+id/alarm_container_3"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/artist_name3"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:text="Descanso entre series"
                    android:fontFamily="@font/montserrat"
                    android:textSize="20sp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/album_recordLabel3"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_light"
                    android:textSize="20sp"
                    android:text="Tipo: Ejercicio"
                    android:textColor="@color/black" />
            </LinearLayout>



            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/material_switch3"
                android:layout_width="67dp"
                android:layout_height="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:scaleX="1.5"
                android:scaleY="1.25" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/alarm_container_4"
            app:layout_constraintTop_toBottomOf="@+id/alarm_container_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/alarm4"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:paddingBottom="20dp"
                app:layout_constraintTop_toTopOf="@+id/alarm_container_3"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/artist_name4"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:text="Descanso entre series"
                    android:fontFamily="@font/montserrat"
                    android:textSize="20sp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/album_recordLabel4"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_light"
                    android:textSize="20sp"
                    android:text="Tipo: Ejercicio"
                    android:textColor="@color/black" />
            </LinearLayout>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/material_switch4"
                android:layout_width="67dp"
                android:layout_height="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:scaleX="1.5"
                android:scaleY="1.25" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>